<% title "Product" %>

<p>
  <strong>Name:</strong>
  <%=h @product.name %>
</p>
<p>
  <strong>Price:</strong>
  <%=h number_to_currency(@product.price) %>
</p>
<p>
  <strong>Released At:</strong>
  <%=h @product.released_at %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>
